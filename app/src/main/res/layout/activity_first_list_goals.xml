<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".FirstListGoals">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_alignParentStart="true"
        android:paddingTop="19sp"
        android:paddingBottom="17sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:background="@color/maincolor"/>
    <TextView
        android:id="@+id/tv_BackPageTitle"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Capaian"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:layout_toEndOf="@id/btn_back"
        android:background="@color/maincolor"/>
    <TextView
        android:id="@+id/tv_Tujuantitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_BackPageTitle"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@android:color/transparent"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/tv_DetailPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Tujuantitle"
        android:text="Daftar To-Do-List"
        android:textSize="24sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_DetailPage"
        android:padding="16dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_view"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:text="Simpan"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/simpan"/>

    <RelativeLayout
        android:id="@+id/checkboxContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_DetailPage"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>
