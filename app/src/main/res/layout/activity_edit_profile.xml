<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".EditProfile">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_alignParentStart="true"
        android:paddingTop="19sp"
        android:paddingBottom="17sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:background="@color/maincolor"/>
    <TextView
        android:id="@+id/tv_BackPageTitle"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Profil"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:layout_toEndOf="@id/btn_back"
        android:background="@color/maincolor"/>
    <TextView
        android:id="@+id/tv_DetailPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_BackPageTitle"
        android:background="@android:color/transparent"
        android:text="Ubah Profil"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:textSize="27dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/tv_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_DetailPageTitle"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Nama"
        android:textStyle="bold"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/edt_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/edt"
        android:text="Rachel Doang"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"/>
    <TextView
        android:id="@+id/tv_Age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_Name"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignLeft="@id/edt_Age"
        android:text="Umur"
        android:textStyle="bold"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/edt_Age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Age"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/edt"
        android:text="20"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"/>
    <TextView
        android:id="@+id/tv_Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_Age"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignLeft="@id/spin_Gender"
        android:text="Jenis Kelamin"
        android:textStyle="bold"
        android:textSize="20dp" />
    <Spinner
        android:id="@+id/spin_Gender"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_below="@id/tv_Gender"/>
    <TextView
        android:id="@+id/tv_College"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spin_Gender"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignLeft="@id/spin_College"
        android:text="Perguruan Tinggi"
        android:textStyle="bold"
        android:textSize="20dp" />
    <Spinner
        android:id="@+id/spin_College"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_below="@id/tv_College"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spin_College"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:text="Simpan"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/simpan"/>

</RelativeLayout>