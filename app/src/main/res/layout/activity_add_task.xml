<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".AddTask">
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_alignParentStart="true"
        android:paddingTop="19sp"
        android:paddingBottom="17sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:background="@color/maincolor"/>
    <TextView
        android:id="@+id/tv_BackPageTitle"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Tugas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:layout_toEndOf="@id/btn_back"
        android:background="@color/maincolor"/>
    <TextView
        android:id="@+id/tv_Tugastitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_BackPageTitle"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:text="Rincian Tugas Baru"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:textSize="27dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/edt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Tugastitle"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:hint="Nama Tugas"/>
    <Button
        android:id="@+id/dateButton"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:drawableRight="@drawable/spinner"
        android:layout_below="@id/edt_nama"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="5dp"
        android:background="@drawable/note_btnlist"
        android:layout_alignParentLeft="true"
        style="?android:spinnerStyle"
        />
    <Button
        android:id="@+id/timeButton"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jam "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@id/dateButton"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentLeft="true"
        android:drawableRight="@drawable/spinner"
        android:background="@drawable/note_btnlist"
        style="?android:attr/spinnerStyle" />
    <TextView
        android:id="@+id/tv_Desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@id/timeButton"
        android:text="Deskripsi"
        android:textStyle="bold"
        android:textSize="23sp"/>
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/edt_Desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Desc"
        android:gravity="center"
        android:background="@drawable/edt"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:minHeight="100sp"
        android:hint="Tulis Disini..."
        android:paddingLeft="15sp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_Desc"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:text="Simpan"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/simpan"/>
</RelativeLayout>