<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".AddGoals">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_alignParentStart="true"
        android:paddingTop="19sp"
        android:paddingBottom="17sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:background="@color/maincolor"/>
    <TextView
        android:id="@+id/tv_BackPageTitle"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Capaian"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:layout_toEndOf="@id/btn_back"
        android:background="@color/maincolor"/>
    <TextView
        android:id="@+id/tv_Tujuantitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_BackPageTitle"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:text="Rincian Capaian Baru"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:textSize="27dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/tv_Capaian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Tujuantitle"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="5dp"
        android:text="Nama Capaian"
        android:textStyle="bold"
        android:textSize="22sp"/>
    <EditText
        android:id="@+id/edt_Capaian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Capaian"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/edt"
        android:hint="Tulis Disini..."
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"/>
    <TextView
        android:id="@+id/tv_Todolist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_Capaian"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="5dp"
        android:text="Daftar To-Do-List"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <!-- Container for dynamic to-do list items -->
    <LinearLayout
        android:id="@+id/container_todo_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_Todolist"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">
        <EditText
            android:id="@+id/edt_Todolist1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_Todolist"
            android:background="@color/edt"
            android:hint="Tulis disini..."
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Addtodolist"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/container_todo_list"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="+  Tambah To Do List"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="17dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@drawable/spend_btncalc"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_Addtodolist"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:text="Simpan"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/simpan"/>
</RelativeLayout>
